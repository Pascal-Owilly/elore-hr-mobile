# API Configuration - MUST USE EXPO_PUBLIC_ PREFIX
EXPO_PUBLIC_API_BASE_URL=http://192.168.100.25:8000
# EXPO_PUBLIC_API_BASE_URL=http://127.0.0.1:8000
EXPO_PUBLIC_API_TIMEOUT=30000

# M-Pesa Configuration (for mobile integration)
EXPO_PUBLIC_MPESA_CONSUMER_KEY=your_mpesa_consumer_key
EXPO_PUBLIC_MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret

# Google Maps (for geofencing)
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# App Configuration
EXPO_PUBLIC_APP_NAME="HR System Kenya"
EXPO_PUBLIC_APP_VERSION=1.0.0

# Offline Configuration
EXPO_PUBLIC_OFFLINE_SYNC_INTERVAL=300000 # 5 minutes
EXPO_PUBLIC_MAX_OFFLINE_ATTEMPTS=3

# Notification Configuration
EXPO_PUBLIC_NOTIFICATION_CHANNEL_ID=hr_system_notifications
EXPO_PUBLIC_NOTIFICATION_CHANNEL_NAME="HR System Notifications"

# Kenya Specific
EXPO_PUBLIC_DEFAULT_CURRENCY=KES
EXPO_PUBLIC_DEFAULT_COUNTRY_CODE=KE

