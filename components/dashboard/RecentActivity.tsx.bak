// components/dashboard/RecentActivity.tsx
import React from 'react';
import { View, Text, StyleSheet, ScrollView, TouchableOpacity } from 'react-native';
import { useTheme } from '@components/theme/ThemeProvider';
import { Layout } from '@constants/Layout';
import { Icon } from '@components/ui/Icon';

export interface ActivityItem {
  id: string;
  type: 'attendance' | 'leave' | 'payroll' | 'document' | 'announcement' | 'other';
  title: string;
  description: string;
  time: string;
  user?: string;
  status?: 'success' | 'warning' | 'error' | 'info';
  unread?: boolean;
}

export interface RecentActivityProps {
  activities: ActivityItem[] = [];
  onItemPress?: (item: ActivityItem) => void;
  onViewAll?: () => void;
  title?: string;
  maxItems?: number;
}

export const RecentActivity: React.FC<RecentActivityProps> = ({
  activities,
  onItemPress,
  onViewAll,
  title = 'Recent Activity',
  maxItems = 5,
}) => {
  const { colors } = useTheme();

  const getTypeIcon = (type: string) => {
    switch (type) {
      case 'attendance':
        return { name: 'clock', type: 'feather' as const, color: colors.primary };
      case 'leave':
        return { name: 'beach', type: 'material-community' as const, color: colors.success };
      case 'payroll':
        return { name: 'cash', type: 'material-community' as const, color: colors.secondary };
      case 'document':
        return { name: 'file-text', type: 'feather' as const, color: colors.info };
      case 'announcement':
        return { name: 'megaphone', type: 'material-community' as const, color: colors.warning };
      default:
        return { name: 'circle', type: 'feather' as const, color: colors.textSecondary };
    }
  };

  const getStatusColor = (status?: string) => {
    switch (status) {
      case 'success':
        return colors.success;
      case 'warning':
        return colors.warning;
      case 'error':
        return colors.error;
      case 'info':
        return colors.info;
      default:
        return colors.textSecondary;
    }
  };

  const displayedActivities = activities.slice(0, maxItems);

  return (
    <View style={[styles.container, { backgroundColor: colors.card }]}>
      <View style={styles.header}>
        <Text style={[styles.title, { color: colors.text }]}>
          {title}
        </Text>
        {onViewAll && (
          <TouchableOpacity onPress={onViewAll}>
            <Text style={[styles.viewAll, { color: colors.primary }]}>
              View All
            </Text>
          </TouchableOpacity>
        )}
      </View>

      {displayedActivities.length === 0 ? (
        <View style={styles.emptyContainer}>
          <Icon
            name="clock"
            type="feather"
            size={48}
            color={colors.textSecondary}
          />
          <Text style={[styles.emptyText, { color: colors.textSecondary }]}>
            No recent activity
          </Text>
        </View>
      ) : (
        <ScrollView style={styles.activitiesList}>
          {displayedActivities.map((activity) => {
            const typeIcon = getTypeIcon(activity.type);
            const statusColor = getStatusColor(activity.status);

            return (
              <TouchableOpacity
                key={activity.id}
                style={[
                  styles.activityItem,
                  activity.unread && styles.unreadItem,
                  onItemPress && styles.clickableItem,
                ]}
                onPress={() => onItemPress?.(activity)}
                activeOpacity={onItemPress ? 0.7 : 1}
              >
                <View style={styles.activityHeader}>
                  <View style={[styles.iconContainer, { backgroundColor: typeIcon.color + '20' }]}>
                    <Icon
                      name={typeIcon.name}
                      type={typeIcon.type}
                      size={16}
                      color={typeIcon.color}
                    />
                  </View>
                  <View style={styles.activityInfo}>
                    <Text style={[styles.activityTitle, { color: colors.text }]}>
                      {activity.title}
                    </Text>
                    <Text style={[styles.activityDescription, { color: colors.textSecondary }]}>
                      {activity.description}
                    </Text>
                  </View>
                  <View style={styles.activityMeta}>
                    <Text style={[styles.activityTime, { color: colors.textSecondary }]}>
                      {activity.time}
                    </Text>
                    {activity.status && (
                      <View style={[styles.statusDot, { backgroundColor: statusColor }]} />
                    )}
                  </View>
                </View>
                {activity.user && (
                  <Text style={[styles.activityUser, { color: colors.textSecondary }]}>
                    {activity.user}
                  </Text>
                )}
              </TouchableOpacity>
            );
          })}
        </ScrollView>
      )}
    </View>
  );
};

const styles = StyleSheet.create({
  container: {
    borderRadius: Layout.borderRadius.lg,
    padding: Layout.spacing.lg,
    marginBottom: Layout.spacing.lg,
    ...Layout.shadow.sm,
  },
  header: {
    flexDirection: 'row',
    justifyContent: 'space-between',
    alignItems: 'center',
    marginBottom: Layout.spacing.md,
  },
  title: {
    fontSize: 18,
    fontWeight: '600',
  },
  viewAll: {
    fontSize: 14,
    fontWeight: '500',
  },
  emptyContainer: {
    alignItems: 'center',
    paddingVertical: Layout.spacing.xl,
  },
  emptyText: {
    fontSize: 14,
    marginTop: Layout.spacing.md,
  },
  activitiesList: {
    maxHeight: 300,
  },
  activityItem: {
    paddingVertical: Layout.spacing.sm,
    borderBottomWidth: 1,
    borderBottomColor: 'rgba(0,0,0,0.05)',
  },
  unreadItem: {
    backgroundColor: 'rgba(59, 130, 246, 0.05)',
    marginHorizontal: -Layout.spacing.lg,
    paddingHorizontal: Layout.spacing.lg,
  },
  clickableItem: {
    paddingHorizontal: Layout.spacing.xs,
    borderRadius: Layout.borderRadius.sm,
  },
  activityHeader: {
    flexDirection: 'row',
    alignItems: 'flex-start',
    marginBottom: Layout.spacing.xs,
  },
  iconContainer: {
    width: 32,
    height: 32,
    borderRadius: 16,
    justifyContent: 'center',
    alignItems: 'center',
    marginRight: Layout.spacing.sm,
  },
  activityInfo: {
    flex: 1,
    marginRight: Layout.spacing.sm,
  },
  activityTitle: {
    fontSize: 14,
    fontWeight: '500',
    marginBottom: 2,
  },
  activityDescription: {
    fontSize: 12,
    lineHeight: 16,
  },
  activityMeta: {
    alignItems: 'flex-end',
  },
  activityTime: {
    fontSize: 11,
    marginBottom: 4,
  },
  statusDot: {
    width: 8,
    height: 8,
    borderRadius: 4,
  },
  activityUser: {
    fontSize: 11,
    fontStyle: 'italic',
    marginLeft: 48, // Align with icon container
  },
});